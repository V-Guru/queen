    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--TextView mlayout_headerader-->
    <style name="TextViewMainHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_main_header_size</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--TextView devices header-->
    <style name="TextViewDevicesHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_sub_header_size</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewDevicesHeaderRoom" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_devices_header_size</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextViewAccesory" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/home_option_size</item>
        <item name="android:textColor">@color/black_d_n</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <!--TextView layout_headerader-->
    <style name="TextViewSubHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_sub_header_size</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
    </style>
    <style name="TextViewMore" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_sub_header_size</item>
        <item name="android:textColor">@color/more_text_d_n</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
    </style>

    <style name="TextViewEmail" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="TextViewContactName" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_sub_header_size</item>
        <item name="android:textColor">@color/more_text_d_n</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
    </style>
    <style name="TextViewLoadName" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
    </style>


    <style name="TextViewSection" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_sub_header_size</item>
        <item name="android:textColor">@color/section_color</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
    </style>

    <!--TextView main content-->
    <style name="TextViewMainContent" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_main_content_size</item>
        <item name="android:textColor">@color/black_d_n</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <!--TextView normal-->
    <style name="TextViewNormal" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
        <item name="color">@color/black_d_n</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!--TextView normal-->
    <style name="TextViewAutomation" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="TextViewAutomationName" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!--TextView Accent-->
    <style name="TextViewAccent" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
    </style>

    <!--TextView Title-->
    <style name="TextViewTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textColor">@color/black_d_n</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <!--TextView Menu-->
    <style name="TextViewMenu" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_menu_size</item>
        <item name="android:textColor">@color/black_d_n</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
    </style>

    <style name="dialog_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dialog_button_height</item>
        <item name="android:minWidth">@dimen/dialog_button_minwidth</item>
        <item name="android:layout_margin">@dimen/uniform_spacing</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/uniform_spacing</item>
    </style>
    <style name="dialogMessage" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
    </style>

    <!--TextView Title Small-->
    <style name="TextViewTitleSmall" parent="TextViewTitle">
        <item name="android:textSize">@dimen/text_title_small_size</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>

    </style>

    <!--TextView Title Small-->
    <style name="TextViewWeekDay" parent="TextViewTitle">
        <item name="android:textSize">@dimen/forteen_sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextWeekDay" parent="TextViewTitle">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">@dimen/uniform_spacing</item>
    </style>

    <!--TextView Small-->
    <style name="TextViewSmall" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
    </style>
    <!--TextView popup-->
    <style name="TextViewPopup" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_popup_size</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/black_d_n</item>
    </style>
    <!--Button Style-->
    <style name="ButtonNormalStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_pressed</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">@dimen/elevation_medium</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>
    <style name="ButtonNoThemelStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">@dimen/elevation_medium</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>
    <style name="Button_no_border_Style">
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:elevation">@dimen/elevation_medium</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColor">@color/more_text_d_n</item>
    </style>
    <style name="GoogleButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/google_btn_pressed</item>
        <item name="android:fontFamily">@font/radomir_tinkov_gilroy_light</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:elevation">@dimen/elevation_medium</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:paddingTop">@dimen/normal_margin</item>
        <item name="android:paddingBottom">@dimen/normal_margin</item>

    </style>
    <style name="SwitchCompatStyle" >
        <item name="thumbTint">@color/switch_selector</item>
        <item name="trackTint">@color/switch_selector</item>
    </style>
    <style name="popupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/dialogue_drawable</item>
    </style>
    <style name="PopUpTheme" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/dialogue_drawable</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_d_n</item>
        <item name="android:textSize">14sp</item>
        <item name="hintTextColor">@color/hint</item>
        <item name="colorControlNormal">@android:color/tertiary_text_dark</item>
        <item name="colorControlActivated">@android:color/holo_orange_light</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="Widget" />
    <style name="Widget.InfoWarningTitles">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Circleimage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="textColor">@color/black_d_n</item>
        <item name="colorControlNormal">@color/stroke_d_n</item>
        <item name="colorControlActivated">@color/stroke_d_n</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

</resources>
