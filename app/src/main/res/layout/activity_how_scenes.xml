<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/uniform_extra_spacing"
    android:orientation="vertical"
    android:background="@color/background_screen_d_n">
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/uniform_extra_spacing"
        android:paddingTop="@dimen/uniform_extra_spacing">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/action_btn_padding"
            android:src="@drawable/ic_back"/>
        <TextView
            android:id="@+id/tvTitle"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="@dimen/text_normal_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="6dp"
            android:textColor="@color/black_d_n"
            android:text="@string/how_to_scene"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/top_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scene_extra_spacing">
            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/uniform_half_spacing">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/radomir_tinkov_gilroy_light"
                    android:text="@string/title_scene_faq"
                    android:textColor="@color/black_d_n"
                    android:id="@+id/text"
                    android:textSize="@dimen/text_medium_size"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray"
                    android:layout_below="@+id/text"
                    android:layout_marginTop="@dimen/uniform_half_spacing"
                    android:layout_marginLeft="@dimen/uniform_half_spacing"
                    android:layout_marginRight="@dimen/uniform_half_spacing"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout"
                android:layout_marginTop="@dimen/scene_extra_spacing"
                android:id="@+id/aura_home_1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/configure_text_1"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="@dimen/text_sub_header_size"
                    android:textColor="@color/black_d_n"
                    android:text="@string/how_to_scene_1"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:id="@+id/add_icon"
                    android:layout_toEndOf="@+id/configure_text_1"
                    android:src="@drawable/icon_faq_add"
                    app:tint="@color/black_d_n"/>
                <TextView
                    android:id="@+id/configure_text_1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_toEndOf="@+id/add_icon"
                    android:text="@string/how_to_scene_1_1"
                    android:textColor="@color/black_d_n"
                    android:textSize="@dimen/text_sub_header_size" />
                    <TextView
                        android:id="@+id/configure_text_1_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/configure_text_1"
                        android:layout_marginStart="@dimen/left_margin"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/how_to_scene_1_2"
                        android:textColor="@color/black_d_n"
                        android:textSize="@dimen/text_sub_header_size" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="@dimen/width_button"
                    android:layout_height="@dimen/width_button"
                    android:layout_below="@+id/text_layout"
                    android:layout_centerInParent="true"
                    android:id="@+id/scene_1"
                    android:src="@drawable/add_scene_1"
                    android:layout_marginTop="@dimen/songs_count"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray"
                    android:layout_below="@+id/scene_1"
                    android:layout_marginTop="@dimen/songs_count"
                    android:layout_marginLeft="@dimen/uniform_spacing"
                    android:layout_marginRight="@dimen/uniform_spacing"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/scene_extra_spacing"
                android:layout_below="@+id/aura_home_1"
                android:id="@+id/aura_home_2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/configure_text_2"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="@dimen/text_sub_header_size"
                    android:textColor="@color/black_d_n"
                    android:text="@string/how_to_scene_2"
                    />
                <ImageView
                    android:layout_width="@dimen/width_button"
                    android:layout_height="@dimen/width_button"
                    android:layout_below="@+id/configure_text_2"
                    android:layout_centerInParent="true"
                    android:src="@drawable/add_scene_2"
                    android:id="@+id/scene_2"
                    android:layout_marginTop="@dimen/songs_count"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray"
                    android:layout_below="@+id/scene_2"
                    android:layout_marginTop="@dimen/songs_count"
                    android:layout_marginLeft="@dimen/uniform_spacing"
                    android:layout_marginRight="@dimen/uniform_spacing"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/scene_extra_spacing"
                android:layout_below="@+id/aura_home_2"
                android:id="@+id/aura_home_3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/configure_text_3"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="@dimen/text_sub_header_size"
                    android:textColor="@color/black_d_n"
                    android:text="@string/how_to_scene_3"
                    />

                <ImageView
                    android:id="@+id/configure_3"
                    android:layout_width="@dimen/width_button"
                    android:layout_height="@dimen/width_button"
                    android:layout_below="@+id/configure_text_3"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/songs_count"
                    android:src="@drawable/add_scene_3" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray"
                    android:layout_below="@+id/configure_3"
                    android:layout_marginTop="@dimen/songs_count"
                    android:layout_marginLeft="@dimen/uniform_spacing"
                    android:layout_marginRight="@dimen/uniform_spacing"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/scene_extra_spacing"
                android:layout_below="@+id/aura_home_3"
                android:id="@+id/aura_home_4">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/configure_text_4"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="@dimen/text_sub_header_size"
                    android:textColor="@color/black_d_n"
                    android:text="@string/how_to_scene_4"
                    />

                <ImageView
                    android:id="@+id/configure_4"
                    android:layout_width="@dimen/width_button"
                    android:layout_height="@dimen/width_button"
                    android:layout_below="@+id/configure_text_4"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/songs_count"
                    android:src="@drawable/add_scene_4" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray"
                    android:layout_below="@+id/configure_4"
                    android:layout_marginTop="@dimen/songs_count"
                    android:layout_marginLeft="@dimen/uniform_spacing"
                    android:layout_marginRight="@dimen/uniform_spacing"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/scene_extra_spacing"
                android:layout_below="@+id/aura_home_4"
                android:id="@+id/aura_home_5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/configure_text_5"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="@dimen/text_sub_header_size"
                    android:visibility="gone"
                    android:textColor="@color/black_d_n"
                    android:text="@string/how_to_scene_4"
                    />

                <ImageView
                    android:id="@+id/configure_5"
                    android:layout_width="@dimen/width_button"
                    android:layout_height="@dimen/width_button"
                    android:layout_below="@+id/configure_text_5"
                    android:layout_centerInParent="true"
                    android:src="@drawable/add_scene_5" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray"
                    android:layout_below="@+id/configure_5"
                    android:layout_marginTop="@dimen/songs_count"
                    android:layout_marginLeft="@dimen/uniform_spacing"
                    android:layout_marginRight="@dimen/uniform_spacing"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/scene_extra_spacing"
                android:layout_marginBottom="@dimen/uniform_large_spacing"
                android:layout_below="@+id/aura_home_5"
                android:id="@+id/aura_home_6">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/configure_text_7"
                    android:textStyle="bold"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="@dimen/text_sub_header_size"
                    android:textColor="@color/black_d_n"
                    android:text="@string/how_to_scene_5"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="@dimen/text_sub_header_size"
                    android:id="@+id/configure_text_8"
                    android:textColor="@color/black_d_n"
                    android:layout_below="@+id/configure_text_7"
                    android:text="@string/how_to_scene_6"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="@dimen/text_sub_header_size"
                    android:id="@+id/configure_text_9"
                    android:textColor="@color/black_d_n"
                    android:layout_below="@+id/configure_text_8"
                    android:text="@string/how_to_scene_7"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="@dimen/text_sub_header_size"
                    android:id="@+id/configure_text_10"
                    android:textColor="@color/black_d_n"
                    android:layout_below="@+id/configure_text_9"
                    android:text="@string/how_to_scene_8"
                    />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>