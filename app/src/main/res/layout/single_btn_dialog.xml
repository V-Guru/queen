<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:splitMotionEvents="false">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/dialog_backgroud_drawable"
        android:paddingTop="@dimen/layout_padding">

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/option_size"
            android:layout_marginEnd="@dimen/option_size"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_title_size"
            android:fontFamily="@font/gilroy_bold"/>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/normal_margin"
            android:paddingBottom="@dimen/one_dp"
            android:layout_margin="@dimen/uniform_extra_spacing"
            android:drawablePadding="@dimen/one_dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal_size"
            android:fontFamily="@font/opensans_regular"/>

        <Button
            android:layout_marginHorizontal="@dimen/option_size"
            android:layout_marginBottom="@dimen/normal_margin"
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:background="@drawable/gradient_desin"
            android:layout_height="wrap_content"
            android:text="@string/txt_ok"
            android:textColor="@color/white"
            android:textSize="@dimen/forteen_sp"/>


    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/option_size"
        android:src="@drawable/ic_close_black_24dp"
        android:id="@+id/ivClose"
        android:layout_margin="@dimen/uniform_extra_spacing"
        android:layout_alignParentStart="true"
        android:layout_height="@dimen/option_size"/>
</RelativeLayout>