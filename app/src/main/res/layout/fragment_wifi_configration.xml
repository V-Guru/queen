<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_screen_d_n"
    tools:context="com.wozart.aura.ui.wifisettings.WifiSettingsFragment">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_back"
        app:tint="@color/black_d_n" />

    <TextView
        android:id="@+id/tvNext"
        style="@style/TextViewMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/activity_horizontal_margin"
        android:shadowColor="?attr/textShadowColor"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="@string/text_next"
        android:textColor="@color/black_d_n" />
    <Button
        android:id="@+id/button"
        android:background="@drawable/gradient_desin"
        app:backgroundTint="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/uniform_extra_spacing"
        android:layout_marginEnd="@dimen/uniform_extra_spacing"
        android:layout_marginBottom="@dimen/uniform_extra_spacing"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:elevation="@dimen/uniform_spacing"
        android:textSize="@dimen/text_normal_size"
        android:fontFamily="@font/gilroy_bold"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:text="@string/refresh"/>



    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/back"
        android:layout_marginTop="@dimen/normal_margin">
    </WebView>
</RelativeLayout>