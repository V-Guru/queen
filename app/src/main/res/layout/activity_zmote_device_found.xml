<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zmoteDeviceCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/device_item_size"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="@dimen/uniform_half_spacing"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/corner_radious_card"
    tools:ignore="contentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/uniform_half_spacing"
        android:weightSum="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/zmoteDeviceName"
            style="@style/TextViewNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/text_medium_size"
            android:maxLines="1"
            android:layout_weight="1"
            android:text="Zmote-123"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            style="@style/TextViewNormal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_switch_logo"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/status"
            style="@style/TextViewNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:text="Living Room"
            android:textSize="@dimen/text_medium_size"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>