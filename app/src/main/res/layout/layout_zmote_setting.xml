<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/uniform_extra_spacing"
    android:background="@color/white">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/uniform_extra_spacing"
        android:src="@drawable/ic_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_info_2"
            style="@style/TextViewAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_info_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/text_zmote_config" />

        <TextView
            android:id="@+id/tv_info_1"
            style="@style/TextViewAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/text_settings_info_1" />

        <Button
            android:id="@+id/btnConfigureDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_info_2"
            android:layout_centerInParent="true"
            android:textAllCaps="false"
            android:background="@drawable/gradient_desin"
            android:layout_marginTop="@dimen/button_margin_top"
            android:paddingBottom="@dimen/uniform_extra_spacing"
            android:paddingLeft="@dimen/button_side_padding"
            android:paddingRight="@dimen/button_side_padding"
            android:paddingTop="@dimen/uniform_extra_spacing"
            android:text="    Configure   "
            android:textColor="@color/white"/>

    </RelativeLayout>
</RelativeLayout>
