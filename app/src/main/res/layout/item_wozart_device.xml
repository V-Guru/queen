<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardDevice"
    android:layout_width="match_parent"
    android:layout_height="@dimen/device_item_size"
    android:layout_margin="@dimen/uniform_half_spacing"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/corner_radious_card"
    tools:ignore="contentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/uniform_spacing">

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxLines="1"
            android:ems="20"
            android:fontFamily="@font/radomir_tinkov_gilroy_light"
            android:text="@string/aura_sense_title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deviceName"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:padding="@dimen/action_btn_padding"
            android:id="@+id/ivDeviceIcon"
            android:src="@drawable/ic_switch_logo"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>