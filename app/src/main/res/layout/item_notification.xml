<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contact_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/elevation"
    android:background="@drawable/curved_rectangle_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/layoutAccept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/normal_margin"
        android:paddingTop="@dimen/normal_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/uniform_spacing"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_notificationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal_size"
                android:layout_marginStart="@dimen/uniform_spacing"
                android:textStyle="normal"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:fontFamily="@font/radomir_tinkov_gilroy_light"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal_size"
                android:layout_marginStart="@dimen/uniform_spacing"
                android:visibility="gone" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_status"
                    android:fontFamily="@font/radomir_tinkov_gilroy_light"
                    android:textSize="@dimen/text_normal_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/uniform_spacing"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:visibility="gone" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/uniform_half_spacing"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">
                    <com.wozart.aura.ui.customview.CustomButton
                        android:id="@+id/btn_reject"
                        android:background="@drawable/gradient_desin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:stateListAnimator="@null"
                        android:text="@string/txt_reject"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:elevation="5dp" />
                    <com.wozart.aura.ui.customview.CustomButton
                        android:id="@+id/btn_accept"
                        android:background="@drawable/gradient_desin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/uniform_spacing"
                        android:layout_marginStart="@dimen/uniform_spacing"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/gilroy_bold"
                        android:textColor="@color/white"
                        android:text="@string/txt_accept"
                        android:padding="@dimen/uniform_spacing"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_normal_size"
                        android:visibility="visible"
                        android:elevation="@dimen/action_btn_padding"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_notification"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/layoutAccept"
        android:layout_marginTop="@dimen/uniform_spacing"
        android:visibility="gone"
        app:cardBackgroundColor="@color/white">

        <TextView
            android:id="@+id/notification_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/uniform_spacing"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>
</RelativeLayout>